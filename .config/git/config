[github]
    user = lahwaacz

# http://stackoverflow.com/questions/7542543/use-gits-word-diff-for-latex-files
#[diff "latex"]
#    wordRegex = "\\\\[a-zA-Z]+|[{}]|\\\\.|[^\\{}[:space:]]+"
