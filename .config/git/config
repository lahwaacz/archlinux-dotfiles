[merge]
    tool = vimdiff
    log = true

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    grep = auto

[log]
    decorate = full

[diff]
    # also detect copies
    renames = copies

[push]
    default = simple

[pull]
    rebase = true

[alias]
    last = show --stat HEAD
    countcommits = shortlog -sn --no-merges
    stash-pop-if-not-empty = "![[ $(git stash list | wc -l) -gt 0 ]] && git stash pop || true"
    stashreset = "!git stash save && git fetch && git reset --hard FETCH_HEAD && git stash-pop-if-not-empty"
    amend = commit --amend
    tags = tag -n99

[help]
    # execute corrected commands immediately
    autocorrect = -1

